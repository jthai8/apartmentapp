<body id ="show_page_body">
<p id="notice"><%= notice %></p>

<div id="apartment_map" data-apartment-id="<%=@apartment.id%>">Google Map will appear here...</div>
<br>
<br>
<p> <%= link_to image_tag(@apartment.image.url(:small)), @apartment.image.url %> </p>

<p>
  <strong>Name:</strong>
  <%= @apartment.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @apartment.phone %>
</p>

<p>
  <strong>Hours to contact:</strong>
  <%= @apartment.hours_to_contact %>
</p>

<p>
  <strong>Aptstreet1:</strong>
  <%= @apartment.aptstreet1 %>
</p>

<p>
  <strong>Aptstreet2:</strong>
  <%= @apartment.aptstreet2 %>
</p>

<p>
  <strong>City:</strong>
  <%= @apartment.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @apartment.state %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= @apartment.postal_code %>
</p>

<p>
  <strong>Country:</strong>
  <%= @apartment.country %>
</p>

<p>
  <strong>Description:</strong>
  <%= @apartment.description %>
</p>

<% if can? :manage, :all %>
<%= link_to 'Edit', edit_apartment_path(@apartment) %> |
<% end %>
<%= link_to 'Back', apartments_path %>
</body>
